# Environmental Policy Agent System - Environment Variables
# Copy this file to .env and fill in your actual values

# Gemini API Key (Required)
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# WAQI API Key (Required for air quality data)
# Get yours at: https://aqicn.org/api/
WAQI_API_KEY=your_waqi_api_key_here

# Google Search API (Optional - for policy news search)
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# System Settings
LOG_LEVEL=INFO
CACHE_TTL_HOURS=24
MAX_API_CALLS_PER_DAY=1000

# Memory Storage
MEMORY_STORAGE_PATH=./data/memory.json
